{
  "name": "Chrome Tabs Finder",
  "short_name": "Tab Finder",
  "description" : "Find and activate Chrome tabs",
  "version": "0.1",
  "icons": {
    "128": "icons/128.png",
    "32": "icons/32.png",
    "16": "icons/16.png"
  },
  "permissions": ["tabs", "nativeMessaging"],
  "offline_enabled": true,
  "background": {
    "scripts": ["background_scripts/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "128": "icons/128.png",
      "32": "icons/32.png",
      "16": "icons/16.png"
    },
    "default_title": "Chrome Tabs Finder"
  },
  "manifest_version": 2
}
